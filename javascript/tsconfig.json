{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "target": "ES5",
        "module": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "types"
    },
    "ts-node": {
        "compilerOptions": {
            "target": "esnext",
            "module": "commonjs"
        }
    },
    "include": ["src", "benchmarks"]
}
